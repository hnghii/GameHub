<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvitemfitler"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:backgroundTint="#2B2B2B"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/bannergamefilter"
            android:layout_width="180dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/adofai" />

        <TextView
            android:id="@+id/tvtengamefilter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Please Wait Please Wait Please Wait Please Wait Please Wait Please Wait "
            android:textColor="@color/white"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/tvloaigamefilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="FPS"
            android:textColor="#838383"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvgiabanfilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1000000 VND"
            android:textColor="#FFEB3B"
            android:textSize="24dp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.cardview.widget.CardView>