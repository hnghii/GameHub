<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b2b2b"
    android:orientation="vertical"
    tools:context=".fragment.library_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="wrap_content"
        >


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#2b2b2b"
            android:src="@drawable/baseline_notifications_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:fontFamily="@font/inter_r"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="50dp"
            android:textColor="@color/white"
            android:text="MENU" />

        <TextView
            android:fontFamily="@font/inter_r"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="WISTLIST" />

        <TextView
            android:fontFamily="@font/inter_r"
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:text="WALET" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgusercart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/img" />

        <TextView
            android:fontFamily="@font/inter_r"
            android:id="@+id/tvuserlib"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="40dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_weight="1"
            android:text="Bao Ne" />
    </LinearLayout>

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Search..."
        app:iconifiedByDefault="false"
        android:background="@drawable/custom_search"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button2"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:drawableRight="@drawable/baseline_arrow_drop_down_24"
            android:backgroundTint="#464646"
            android:layout_marginRight="10dp"
            android:text="Options" />

        <Button
            android:id="@+id/button4"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:drawableRight="@drawable/baseline_arrow_drop_down_24"
            android:backgroundTint="#464646"
            android:text="Your Rank" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvwishlist"
        android:layout_width="match_parent"
        android:layout_height="330dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:backgroundTint="#535353"
        android:text="Back" />

</LinearLayout>